   }

    margin:0;
   }
  
  .banneritem{
  	display: flex;
  }

  .banneritem div{
    color: #808080;
    margin: 2rem 0rem 0 2rem;
    font-family: Arial, Helvetica, sans-serif;
  }
  .banneritem div a{
    color: #db9999 ;
    font-size: 13px;
    border-bottom: 1px solid #db9999;
  }

  
    #slideshow {
        overflow: hidden;
        height: 510px;
        width: 728px;
        margin: 0 auto 3em auto;
    }
  
    .bannerimage{
      width: 125px;
      height: 125px;
    }
     
    .slide {
        float: left;
        height: 510px;
        width: 728px;
    }
     
     
    .slide-wrapper {
        width: calc(728px * 4);
        animation: slide 10s ease infinite;
    }
     
     
    @keyframes slide {

        20% {
            margin-left: 0px;
        }
        40% {
            margin-left: calc(-728px * 1);
        }
        60% {
            margin-left: calc(-728px * 2);
        }
        80% {
            margin-left: calc(-728px * 3);
        }
    }
    @media screen and (max-width: 700px){
   	 #banner{
  	display: grid;
  }
    	}
</style>

