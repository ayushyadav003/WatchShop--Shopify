
	<div>
      <ul class="slideshow">
        {% for block in section.blocks %}
          <li id="show_image" >
          	<img class="card_part card_part-one" src="{{ block.settings.silder_image | img_url: '400x800' }}" >
          </li>
         {% endfor %}
      </ul>
	</div>

<style>
  
 .slideshow { 
  margin: 50px auto; 
  position: relative; 
  width: 240px; 
  height: 240px; 
  padding: 10px; 
  box-shadow: 0 0 20px rgba(0,0,0,0.4); 
}

.slideshow > li { 
  position: absolute; 
  top: 10px; 
  left: 10px; 
  right: 10px; 
  bottom: 10px; 
}
  
</style>


{% schema %}
  {
    "name": "Image slider",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_image",
          "label": "Show slider",
          "default": true
      }
       ],
    "blocks": [
        {
          "name": "Image",
          "type": "image",
          "settings": [
              {
                "type": "image_picker",
                "id": "silder_image",
                "label": "Add image"
              },
              {
                "type": "url",
                "id": "image_link",
                "label": "Link"
              }
            ]
          }
        ]  
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}

    $(".slideshow > li:gt(0)").hide();

    setInterval(function() { 
      $('.slideshow > li:first')
      .fadeOut(1000)
      .next()
      .fadeIn(1000)
      .end()
      .appendTo('.slideshow');
    }, 3000);

{% endjavascript %}
