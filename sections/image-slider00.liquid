
	<div>
      <div id="slideshow">
        {% for block in section.blocks %}
          <div id="show_image" class="silde-wrapper" >
          	<img class="slide" src="{{ block.settings.silder_image | img_url: '400x800' }}" >
          </div>
         {% endfor %}
      </div>
	</div>

<style>
     
    #slideshow {
        overflow: hidden;
        height: 510px;
        width: 728px;
        margin: 3em auto;
    }
  
    .slide {
        float: left;
        height: 510px;
        width: 728px;
    } 
    .slide-wrapper {
         
        /* Calculate the total width on the
      basis of number of slides */
        width: calc(728px * 4);
         
        /* Specify the animation with the
      duration and speed */
        animation: slide 10s ease infinite;
    }
     
     

    @keyframes slide {

        20% {
            margin-left: 0px;
        }
        40% {
            margin-left: calc(-728px * 1);
        }
        60% {
            margin-left: calc(-728px * 2);
        }
        80% {
            margin-left: calc(-728px * 3);
        }
    }
</style>

{% schema %}
  {
    "name": "Image slider",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_image",
          "label": "Show slider",
          "default": true
      }
       ],
    "blocks": [
        {
          "name": "Image",
          "type": "image",
          "settings": [
              {
                "type": "image_picker",
                "id": "silder_image",
                "label": "Add image"
              },
              {
                "type": "url",
                "id": "image_link",
                "label": "Link"
              }
            ]
          }
        ]  
  }
{% endschema %}

