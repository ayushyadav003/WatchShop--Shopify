
{% if section.settings.show_topbar %}
	
      <div class="announcement-container">
         {% for block in section.blocks %}
        <div class="announcement-bar">
          <div class="slide" href="{{ block.settings.ammouncement_link}}" ><p>{{ block.settings.announcement_text }}</p></div>
        </div>
      {% endfor %}  
       <div id='dismiss' class="cross-announcement-bar" onclick="dismiss(this)">&#215</div>
      </div>
{% endif %}




{% schema %}
{
  "name": "Announcement",
  "max_blocks": 5,
  "settings": [  
	{
          "type": "checkbox",
          "id": "show_topbar",
          "label": "Show bar",
          "default": true
      }
],
  "blocks": [
    {
      "name": "Announcement",
      "type": "Text",
      "settings": [
          {
            "type": "text",
            "id": "announcement_text2",
            "default": "Welcome to our store",
            "label": "Text"
          },
		  {
			"type": "url",
			"id": "ammouncement_link",
			"label": "Link"
		  }
        ]
      }
	]  
}
{% endschema %}


