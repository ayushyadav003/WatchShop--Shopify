
{% if section.settings.show_topbar %}
      <div class="announcement-container">
        <div class="announcement-bar">
          	<div class="slide">{{ section.blocks.settings.announcement_text }}</div>
        </div>
       <div id='dismiss' class="cross-announcement-bar" onclick="dismiss(this)">&#215</div>
      </div>
{% endif %}


{% schema %}
{
  "name": "Announcement",
  "class": "announcement-bar",
  "max_blocks": 5,
  "settings": [  
	{
          "type": "checkbox",
          "id": "show_topbar",
          "label": "Show bar",
          "default": true
      }
],
  "blocks": [
    {
      "name": "Announcement",
      "type": "Text",
      "settings": [
          {
            "type": "text",
            "id": "announcement_text",
            "default": "Welcome to our store",
            "label": "Text"
          }
        ]
      }
	]
}
{% endschema %}


