
{% if section.settings.show_topbar %}
      <div class="announcement-container">
        <div class="announcement-bar">
          	<div class="slide">{{ blocks.settings.announcement_text }}</div>
        </div>
       <div id='dismiss' class="cross-announcement-bar" onclick="dismiss(this)">&#215</div>
      </div>
{% endif %}


{% schema %}
{
  "name": "Announcement",
  "class": "announcement-container",
  "max_blocks": 5,
  "settings": [  
	{
          "type": "checkbox",
          "id": "show_topbar",
          "label": "Show bar",
          "default": true
      }
],
  "blocks": [
    {
      "name": "Announcement",
      "type": "Text",
      "settings": [
          {
            "type": "text",
            "id": "announcement_text",
            "default": "Welcome to our store",
            "label": "Text"
          }
        ]
      }
	]
}
{% endschema %}


{% stylesheet %}
{% endstylesheet %}

{% javascript %}
function dismiss(val){
	val.parentNode.style.display='none';
  	document.cookie = "preference= 1; expires=Sunday";
  
}

let allcookie = document.cookie.split(';').map(cookie => cookie.split('='))
			.reduce((accumulator, [key, value]) =>({...accumulator,
             [key.trim()]:decodeURIComponent(value) }), {});

if(allcookie.preference != 1){
	document.getElementsByClassName("announcement-container")[0].style.display="flex";
}
{% endjavascript %}
